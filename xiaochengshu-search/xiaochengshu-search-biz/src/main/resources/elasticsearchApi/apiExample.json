// 用户搜索 GET /user/_search
{
  "query": {
    "multi_match": {
      "query": "橙子",
      "fields": ["nickname", "xiaochengshu_id"]
    }
  },
  "sort": [
    {
      "fans_total": {
        "order": "desc"
      }
    }
  ],
  "from": 0,
  "size": 10,
  "highlight": {
    "fields": {
      "nickname": {
        "pre_tags": ["<strong>"],
        "post_tags": ["</strong>"]
      }
    }
  }
}

// 笔记搜索 POST /note/_search
{
  "query": {
    "function_score": {
      "query": {
        "multi_match": {
          "query": "照片",
          "fields": ["title^2", "topic"]
        }
      },
      "functions": [
        {
          "field_value_factor": {
            "field": "like_total",
            "factor": 0.5,
            "modifier": "sqrt",
            "missing": 0
          }
        },
        {
          "field_value_factor": {
            "field": "collect_total",
            "factor": 0.3,
            "modifier": "sqrt",
            "missing": 0
          }
        },
        {
          "field_value_factor": {
            "field": "comment_total",
            "factor": 0.2,
            "modifier": "sqrt",
            "missing": 0
          }
        }
      ],
      "score_mode": "sum",
      "boost_mode": "sum"
    }
  },
  "sort": [
    {
      "_score": {
        "order": "desc"
      }
    }
  ],
  "from": 0,
  "size": 10,
  "highlight": {
    "fields": {
      "title": {
        "pre_tags": ["<strong>"],
        "post_tags": ["</strong>"]
      }
    }
  }
}